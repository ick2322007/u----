pip install pygame

import pygame
import sys

# 定数
BOARD_SIZE = 8
TILE_SIZE = 64
WIDTH = HEIGHT = BOARD_SIZE * TILE_SIZE
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
GREEN = (0, 128, 0)
BORDER_COLOR = (0, 0, 0)
EMPTY = 0
BLACK_STONE = 1
WHITE_STONE = 2

# 石の描画
def draw_stone(screen, x, y, color):
    pygame.draw.circle(screen, color, (x * TILE_SIZE + TILE_SIZE // 2, y * TILE_SIZE + TILE_SIZE // 2), TILE_SIZE // 2)

# 盤面の描画
def draw_board(screen, board):
    # 盤面の背景を描画
    for y in range(BOARD_SIZE):
        for x in range(BOARD_SIZE):
            color = GREEN if (x + y) % 2 == 0 else (0, 100, 0)  # 緑のマス
            pygame.draw.rect(screen, color, (x * TILE_SIZE, y * TILE_SIZE, TILE_SIZE, TILE_SIZE))
            
            # ボードの境界線
            pygame.draw.rect(screen, BORDER_COLOR, (x * TILE_SIZE, y * TILE_SIZE, TILE_SIZE, TILE_SIZE), 1)
            
            # 石の描画
            if board[y][x] == BLACK_STONE:
                draw_stone(screen, x, y, BLACK)
            elif board[y][x] == WHITE_STONE:
                draw_stone(screen, x, y, WHITE)

# 石を置く処理（簡単なルール実装）
def place_stone(board, x, y, color):
    if board[y][x] == EMPTY:
        board[y][x] = color
        return True
    return False

# ゲームのロジック
def main():
    pygame.init()
    screen = pygame.display.set_mode((WIDTH, HEIGHT))
    pygame.display.set_caption("Othello Game")

    # ボード初期化
    board = [[EMPTY for _ in range(BOARD_SIZE)] for _ in range(BOARD_SIZE)]
    board[3][3] = WHITE_STONE
    board[3][4] = BLACK_STONE
    board[4][3] = BLACK_STONE
    board[4][4] = WHITE_STONE

    # プレイヤーターン（最初は黒から）
    current_turn = BLACK_STONE

    clock = pygame.time.Clock()

    while True:
        screen.fill((0, 0, 0))  # 背景を黒に
        draw_board(screen, board)  # 盤面を描画

        # イベント処理
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()

            if event.type == pygame.MOUSEBUTTONDOWN and event.button == 1:
                # マウスクリック位置
                mouse_x, mouse_y = event.pos
                x, y = mouse_x // TILE_SIZE, mouse_y // TILE_SIZE
                
                # 石を置く
                if place_stone(board, x, y, current_turn):
                    current_turn = WHITE_STONE if current_turn == BLACK_STONE else BLACK_STONE

        # 描画の更新
        pygame.display.flip()
        clock.tick(60)

if __name__ == "__main__":
    main()

